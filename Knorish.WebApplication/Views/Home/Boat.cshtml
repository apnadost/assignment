
@{
    ViewData["Title"] = "Boat";
}
<script src="~/js/crud.js"></script>
<div class="container">
    <h2>Boat List </h2>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="return clearTextBox()">Add New Boat</button><br /><br />
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Name
                </th>
                <th>
                    Hourly Price
                </th>
               
            </tr>
        </thead>
        <tbody class="tbody"></tbody>
    </table>
</div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                @*<h4 class="modal-title" id="myModalLabel">Add Boat</h4>*@ 
                <button type="button" class="close" data-dismiss="modal">×</button>
            </div>
            <div class="modal-body">
                <form id="myForm">
                    <input type="hidden" class="form-control" id="BoatID" placeholder="Id" disabled="disabled" />
                    <div class="form-group">
                        <label for="ContactName">Name</label>
                        <input type="text" class="form-control" id="BoatName" placeholder="Boat Name" />
                    </div>
                    <div class="form-group">
                        <label for="CompanyName">Hourly Price</label>
                        <input type="text" class="form-control" id="HPrice" placeholder="Hourly Price" />
                    </div>
                  
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnAdd" onclick="Add();">Add</button>

                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
